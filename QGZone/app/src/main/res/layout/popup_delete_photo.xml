<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="此图片将从1个相册中删除"
        android:textSize="16dp"
        android:gravity="center"
        android:clickable="false"
        android:background="@drawable/popup_delete_up_robg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyTextBg"/>

    <Button
        android:id="@+id/popup_btn_delete"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:textColor="@color/redTextBg"
        android:text="删除图片"
        android:background="@drawable/popup_delete_down_robg"/>


    <Button
        android:id="@+id/popup_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:textColor="@color/lightBlue"
        android:text="取消"
        android:background="@drawable/popup_delete_robg"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>
