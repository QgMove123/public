<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wordStyle" >
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/choose_bar_blue</item>
    </style>
    <style name="startWordStyle" parent="@style/wordStyle">
        <item name="android:background">@drawable/start_button_bg</item>
    </style>
    <style name="lineStyle" >
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
